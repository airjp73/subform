{
  "name": "subform",
  "version": "0.0.5",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "default": "./dist/index.d.ts"
      },
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    },
    "./zod": {
      "types": {
        "import": "./dist/zod/index.d.mts",
        "default": "./dist/zod/index.d.ts"
      },
      "import": "./dist/zod.mjs",
      "default": "./dist/zod.js"
    },
    "./react": {
      "types": {
        "import": "./dist/react/index.d.mts",
        "default": "./dist/react/index.d.ts"
      },
      "import": "./dist/react.mjs",
      "qr": "./dist/react.js"
    }
  },
  "files": [
    "**"
  ],
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc",
    "test": "vitest",
    "build": "bun run vite && bun run types && bun run ./bin/makeMts.ts",
    "vite": "ENTRY=src/index.ts vite build && ENTRY=src/react/index.ts vite build && ENTRY=src/zod/index.ts vite build",
    "types": "tsc",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@testing-library/user-event": "^14.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "bun-types": "*",
    "eslint": "^8.38.0",
    "jsdom": "^22.1.0",
    "remeda": "^1.29.0",
    "tiny-invariant": "^1.3.1",
    "typescript": "^5.1.6",
    "vite": "^5.0.2",
    "vitest": "^0.34.6",
    "zustand": "^4.4.6"
  },
  "peerDependencies": {
    "zod": ">=3.0.0 <4.0.0",
    "@types/react": ">=18.0.0 <19.0.0",
    "react": ">=18.0.0 <19.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "@types/react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
