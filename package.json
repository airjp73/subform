{
  "name": "subform",
  "private": true,
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "types": "dist/index.d.ts",
  "files": [
    "**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.esm.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs.js"
      }
    },
    "./zod": {
      "import": {
        "types": "./dist/zod/index.d.ts",
        "default": "./dist/zod/index.esm.js"
      },
      "require": {
        "types": "./dist/zod/index.d.ts",
        "default": "./dist/zod/index.cjs.js"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react/index.d.ts",
        "default": "./dist/react/index.esm.js"
      },
      "require": {
        "types": "./dist/react/index.d.ts",
        "default": "./dist/react/index.cjs.js"
      }
    }
  },
  "scripts": {
    "typecheck": "tsc",
    "test": "vitest",
    "build": "tsup"
  },
  "dependencies": {
    "@testing-library/user-event": "^14.5.1",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "eslint": "^8.38.0",
    "jsdom": "^22.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.1.6",
    "zustand": "^4.4.6",
    "vitest": "^0.34.6",
    "remeda": "^1.29.0",
    "tiny-invariant": "^1.3.1"
  },
  "peerDependencies": {
    "zod": ">=3.0.0 <4.0.0",
    "@types/react": ">=18.0.0 <19.0.0",
    "react": ">=18.0.0 <19.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "@types/react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
